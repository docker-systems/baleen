<div id="deployment-actions">
    <p> The current plan is: </p>


    {% for action in action_data %}
    <div class="row">
        <div class="span12">
            <div class="well">
                <div class="row-fluid">
                    <div class="span12">
                        <h4><span class="handle">{{ action.group }}:{{ action.action }}</span></h4>
                        <p>{{ action.name }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
